for $k,$v in $query     //$k取的是SM,md     $v取的是后面的{}
    @media only screen and ({$v.query})
        .container
            width unit($v['containerWidth'],px)
        for $v in 1..$cols
            .col-{$k}-{$v}
                width (100 / $cols * $v)%